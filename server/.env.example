# Featherless AI API Key (for sub-topic generation)
FEATHERLESS_API_KEY=your_featherless_api_key_here

# Featherless Model (the LLM model to use)
# Browse available models at https://featherless.ai/models
FEATHERLESS_MODEL=deepseek-ai/DeepSeek-V3.2

# Google Gemini API Key (for summaries and quiz generation)
# Only required if USE_GEMINI=true
GEMINI_API_KEY=your_gemini_api_key_here

# Enable/disable Gemini features (fun facts and quizzes)
# Set to "true" to enable, "false" to disable
USE_GEMINI=true

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/fractal

# Server configuration
PORT=3000
CLIENT_URL=http://localhost:5173


